<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MauiFirebaseAuth.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    NavigationPage.HasBackButton="False">

    <Grid>
        
        <Image Source="lightning.jpg"
               Opacity="0.5" Aspect="AspectFill"
               />

            <StackLayout
            HorizontalOptions="Center"
            VerticalOptions="Center">

                <Label
                Text="Welcome to Oskar Maui"
                TextColor="White" />

                <Button
                Margin="0,10"
                Text="Login"
                Clicked="Button_Login"
                />

            <Button
                    Margin="0,10"
                    Text="Add note"
                    Clicked="Button_Note"/>
        </StackLayout>
    </Grid>
</ContentPage>
